{
  "fileTypes": ["nexoscript"],
  "name": "NexoVM",
  "scopeName": "source.nexovm",
  "patterns": [
    {
      "name": "keyword.control.nexovm",
      "match": "\\b(fun|func|function|def|define)\\b"
    },
    {
      "name": "entity.name.function.nexovm",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\{)"
    },
    {
      "name": "storage.type.nexovm",
      "match": "\\b(string|integer|int)\\b"
    },
    {
      "name": "support.function.execution.nexovm",
      "match": "\\b(cout|print|sout|sysout|log)\\b"
    },
    {
      "name": "support.type.call.nexovm",
      "match": "\\bcall\\b"
    },
    {
      "name": "variable.other.nexovm",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "variable.language.nexovm",
      "match": "\\*\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "keyword.operator.assignment.nexovm",
      "match": "="
    },
    {
      "name": "keyword.operator.nexovm",
      "match": ">!>|>>"
    },
    {
      "name": "string.quoted.double.nexovm",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "number.language.nexovm",
      "match": "[0-9]"
    },
    {
      "name": "comment.line.double-slash.nexovm",
      "match": "//.*$"
    },
    {
      "name": "comment.line.hashtag.nexovm",
      "match": "#.*$"
    },
    {
      "name": "comment.block.nexovm",
      "begin": "/\\*",
      "end": "\\*/"
    }
  ],
  "semanticTokenColors": [
    {
      "scope": "keyword.control.nexovm",
      "settings": {
        "foreground": "#FF2222"
      }
    },
    {
      "scope": "entity.name.function.nexovm",
      "settings": {
        "foreground": "#33FF57"
      }
    },
    {
      "scope": "storage.type.nexovm",
      "settings": {
        "foreground": "#FFD700"
      }
    },
    {
      "scope": "support.function.execution.nexovm",
      "settings": {
        "foreground": "#1E90FF"
      }
    },
    {
      "scope": "support.property.call.nexovm",
      "settings": {
        "foreground": "#8A2BE2"
      }
    },
    {
      "scope": "variable.other.nexovm",
      "settings": {
        "foreground": "#FFA500"
      }
    },
    {
      "scope": "variable.language.nexovm",
      "settings": {
        "foreground": "#00FA9A"
      }
    },
    {
      "scope": "keyword.operator.assignment.nexovm",
      "settings": {
        "foreground": "#FF1493"
      }
    },
    {
      "scope": "keyword.operator.nexovm",
      "settings": {
        "foreground": "#DC143C"
      }
    },
    {
      "scope": "string.quoted.double.nexovm",
      "settings": {
        "foreground": "#D2691E"
      }
    },
    {
      "scope": "comment.line.double-slash.nexovm",
      "settings": {
        "foreground": "#808080"
      }
    },
    {
      "scope": "comment.block.nexovm",
      "settings": {
        "foreground": "#2F4F4F"
      }
    }
  ]
}
