{
  "name": "nexovm-language-support",
  "displayName": "NexoVM Language Support",
  "description": "Language support for NexoVM, including syntax highlighting and other features.",
  "version": "0.0.0",
  "publisher": "Nexoscript",
  "repository": "https://github.com/Nexoscript/nexovm",
  "contributes": {
    "languages": [
      {
        "id": "nexovm",
        "extensions": [
          ".nexoscript"
        ],
        "aliases": [
          "NexoVM",
          "nexovm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nexovm",
        "scopeName": "source.nexovm",
        "path": "./syntaxes/nexovm.tmLanguage.json"
      }
    ]
  },
  "configurationDefaults": {
    "nexovm": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20",
    "@types/vscode": "^1.73.0",
    "eslint": "^9.13.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
